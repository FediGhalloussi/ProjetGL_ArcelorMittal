<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.projetgl_ihm.GUI.DashboardOuvrierController">
    <children>
        <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">
            <children>
                <Label text="Informations de l'ouvrier" style="-fx-font-weight: bold;">
                    <font>
                        <Font size="18" />
                    </font>
                </Label>
                <GridPane hgap="10" vgap="10">
                    <children>
                        <Label text="Nom : Fedi" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <Label fx:id="nomLabel" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        <Label text="Numéro d'Atelier : 1" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <Label fx:id="numAtelierLabel" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    </children>
                </GridPane>
            </children>
        </VBox>
        <Button fx:id="ParametresButton" text="Paramètres" AnchorPane.bottomAnchor="10" AnchorPane.rightAnchor="10" onAction="#ouvrirParametres" />
    </children>
</AnchorPane>
